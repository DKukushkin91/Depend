block pageVar
	-
		page = '';

block path
	-
		var baseDir = '';

block title
	-
		var title = '';

block text
	-
		var topText = '';

include ./_mixins

doctype html
html(lang='ru')
	head
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(http-equiv='Content-Type' content='text/html;charset=UTF-8')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')

		title Depend

		link(href=`${baseDir}/css/main.css` type="text/css" rel="stylesheet")
		link(href=`${baseDir}/css/vendor.css` type="text/css" rel="stylesheet")

	body(lang='ru-RU')
		.box
			.box__content
				include ./_header

				include ./_top

				main.main
					block page

			include ./_footer

		script(src=`${baseDir}/scripts/vendor.js` type="text/javascript")
		script(src=`${baseDir}/scripts/main.js` type="text/javascript")
