.about-item
	width 100%

	&__wrap
		width 100%

	&__title
		fz-24()
		line-height 28px
		font-family $Noto
		font-weight 700
		padding-bottom 20px
		color $l-black

	&__avatar-wrap
		display flex
		width 100%
		display flex
		flex-direction row
		flex-wrap wrap
		padding-bottom 30px

	&__avatar-box
		width 100%
		padding-bottom 20px
		display flex
		flex-direction: row
		flex-wrap: wrap
		align-items center

	&__avatar-img
		border-radius: 50%
		max-width 50px
		margin-right 10px

		& img,
		& picture
			border-radius inherit

	&__avatar-content
		display flex
		flex-direction column
		justify-content flex-start

	.about-item__avatar-content--row
		flex-direction row

		&:not(:last-child)
			padding-bottom 10px

	&__avatar-text
		fz-14()
		font-family $Noto
		font-weight 600
		line-height 16px
		color $m-black
		display block

		&:not(:last-child)
			padding-bottom 5px

	&__avatar-text--font
		fz-12()
		line-height 18px
		font-weight normal

	&__avatar-text--fw
		font-weight normal

		&:not(:last-child)
			padding-bottom 0

	&__avatar-text--color
		color: $green
		margin-left 5px

	&__title-img
		max-width: 787px
		border-radius: 12px
		margin-bottom 30px

		& img,
		& picture
			border-radius: inherit

	&__maintenance
		width 100%
		padding-bottom 30px

	&__list-title
		fz-18()
		line-height 21px
		color $l-black
		font-weight bold
		text-align left
		padding-bottom 15px

	&__list
		padding 0
		margin 0
		list-style-position inside

		&:not(:last-child)
			padding-bottom 30px

	&__item
		width 100%

		&:not(:last-child)
			padding-bottom 10px

		&::marker
			fz-14()
			line-height 21px
			color $purple
			font-weight 600
			font-family $Noto

	&__item--ul
		padding 0
		padding-top 10px

		&:not(:last-child)
			padding-bottom 0

	&__link
		fz-14()
		line-height 21px
		color $purple
		font-weight 600
		text-align: left
		text-decoration: none

	&__ul-list
		padding 0
		padding-left 15px
		margin 0
		list-style-type disc

	&__text
		fz-14()
		line-height 21px
		color $m-black
		font-family $Noto
		font-weight 400
		padding-bottom 30px

	&__content-title
		fz-22()
		line-height 26px
		color $l-black
		font-weight bold
		text-align left
		padding-bottom 15px

	&__content-title--fz
		fz-18()
		line-height 21px

	&__blockquote
		position relative
		width 100%
		padding-bottom 40px

		&:before
			content: ''
			display block
			position relative
			background-image: url("data:image/svg+xml,%3Csvg width='19' height='15' viewBox='0 0 19 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='4' cy='11' r='4' fill='%23026920'/%3E%3Cpath d='M1 11C1 5.5 2 3 5 1' stroke='%23026920' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3Ccircle cx='15' cy='11' r='4' fill='%23026920'/%3E%3Cpath d='M12 11C12 5.5 13 3 16 1' stroke='%23026920' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A");
			background-position: 0 0
			background-size: 100%
			background-repeat: no-repeat
			width 19px
			height 15px
			margin-bottom 15px

	&__bq-text
		fz-14()
		line-height 21px
		font-family $Noto
		color: $m-black
		font-style italic
		padding-bottom 15px

	&__cite
		display flex
		flex-direction: column
		text-align: left

	&__cite-text
		fz-14()
		line-height 17px
		font-family $Noto
		color: $m-black
		font-weight 600
		font-style normal

		&:not(:last-child)
			padding-bottom 5px

	&__cite-text--font
		fz-12()
		line-height 18px
		font-weight 400

	&__content
		width 100%

	&__content-list
		margin 0
		padding 0
		list-style-position inside
		padding-bottom 30px

	&__content-item
		fz-14()
		line-height 21px
		font-weight normal
		color $m-black
		width 100%

		&:not(:last-child)
			padding-bottom 20px

		&::marker
			color: $green

	&__slider
		max-width: 787px

		&.swiper
			padding-bottom 30px

	&__slder-wrap
		width 100%

	&__slide
		width 100%
		max-width: 345px

		&.swiper-slide
			height auto

	&__slide-img
		height 100%
		border-radius: 12px

		& img,
		& picture
			width 100%
			height 228px
			object-fit: cover
			border-radius: inherit

	&__pagination
		text-align: center

		& .swiper-pagination-bullet-active
			background $purple

	&__navigation
		display: none

	&__ol-list
		list-style: none
		padding 0
		padding-bottom 30px
		margin 0
		counter-reset: olItem

	&__ol-item
		fz-14()
		position relative
		width 100%
		line-height 21px
		color $m-black
		font-family $Noto
		font-weight 400
		display inline-flex

		&:not(:last-child)
			padding-bottom 10px

		&:before
			counter-increment: olItem
			content: counter(olItem)
			fz-14()
			line-height 21px
			font-weight 700
			font-family $Noto
			color $white
			background-color: $green
			border-radius: 50%
			flex: 1 0 27px
			height 27px
			margin-right 10px
			display flex
			align-items center
			justify-content center

	&__table
		width 100%
		border-radius: 12px
		border 1px solid $buy-gray
		margin-bottom 30px
		border-spacing: 0
		border-collapse: separate

	&__thead
		display: none

		@media $md
			display block
			background: $burger-green
			fz-14()
			line-height 21px
			color $white
			font-weight 600
			padding: 10px 20px
			width 100%
			border-top-left-radius: inherit
			border-top-right-radius: inherit

	&__tr-head
		@media $md
			display grid
			grid-template-columns: repeat(auto-fill, 23%)
			width 100%
			align-items: center
			grid-column-gap: 10px

	&__td-head
		width 100%

	&__tbody
		width 100%

		@media $md
			border-bottom-right-radius: inherit
			border-bottom-left-radius: inherit

	&__tr-body
		width 100%

		@media $md
			display grid
			grid-template-columns: repeat(auto-fill, 23%)
			grid-column-gap: 10px
			padding: 10px 20px

			&:last-child
				border-bottom-right-radius: inherit
				border-bottom-left-radius: inherit

		& td:first-child
			background: $burger-green
			fz-14()
			line-height 21px
			color $white
			font-weight 600

			@media $md
				background: 0
				color: $m-black
				font-weight 400

		&:first-child td:first-child
			border-top-left-radius: 12px
			border-top-right-radius: 12px

			@media $md
				border-radius: 0

		&:nth-child(even)
			@media $md
				background-color $buy-gray

	&__td-body
		fz-14()
		line-height 21px
		color: $m-black
		font-weight 400
		display inline-flex
		align-items: center
		width 100%
		position relative
		text-align: right
		justify-content: space-between
		padding: 10px 20px

		@media $md
			text-align: left
			padding: 0

		&:not(:first-child)
			&:before
				content: attr(data-label)
				display inline-block
				text-align: left

				@media $md
					display: none

		&:first-child:before
				@media $md
					content: attr(data-label)
					display block
					text-align: left
					width 100%


		&:nth-child(odd)
			background-color $buy-gray

			@media $md
				background-color transparent

	&__td-text
		@media $md
			display none
