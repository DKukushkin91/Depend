.header
	width: 100%
	position relative
	z-index 999

	&__wrap
		position relative
		display: flex
		flex-direction: row
		justify-content: space-between
		align-items center
		padding: 10px 0

		@media $xl
			padding: 25px 0

	&__burger-btn
		display: block
		border: 0
		background: 0
		position: relative
		width: 24px
		height 24px
		cursor pointer

		&::before
			content: ''
			position absolute
			width: 24px
			height: 2px
			box-shadow: 0 2px $burger-green,0 12px $burger-green
			border-radius: 2px
			top: 0
			left: 0
			transition: all .1s linear

		@media $xl
			display: none

	&__burger-btn--close
		&::after
			content: '';
			position: absolute;
			width: 24px;
			height: 2px;
			background:	$burger-green;
			top: 50%;
			left: 0;
			border-radius: 2px;
			transform: rotate(45deg);
			box-shadow: none;

		&::before
			content: '';
			position: absolute;
			width: 24px;
			height: 2px;
			background:	$burger-green;
			top: 50%;
			left: 0;
			border-radius: 2px;
			transform: rotate(-45deg);
			box-shadow: none;

	&__logo-wrap
		width: 74.72px

		@media $laptop
			width: 93.4px

	&__menu
		position: absolute
		opacity: 0
		transition: transform 0.5s ease 0s;
		transform: translateX(-120%);

		@media $xl
			position: static
			opacity: 1
			transform: none
			display: flex
			flex-direction: row
			align-items: center
			justify-content space-between
			width: 100%

	&__menu--open
		opacity: 1
		transform: translateX(0%);
		display: flex
		flex-direction: column
		justify-content: space-around
		position: absolute
		top: 100%
		left: -15px
		width: 100%
		height: 100vh
		max-width: 302px
		background-color: #F9F9F8
		padding: 15px
		padding-bottom 60px

		@media $laptop
			left: -50px

	&__tel-link
		fz-18()
		font-family $Noto
		font-weight 500
		color: $black
		text-decoration: none
		display: block
		margin-right 30px

	&__search-btn
		cursor pointer
		border: 0
		background 0
		border-radius: 0

	&__search-icon
		stroke: $gray
		fill: none

.nav
	width: 100%
	display: flex
	flex-direction: column
	align-items: flex-start

	&__list
		list-style: none
		padding 0
		margin 0
		display: flex
		flex-direction: column
		flex: 1

		@media $xl
			width: 100%
			flex-direction: row
			align-items: center
			justify-content: center

	&__item
		&:not(:last-child)
			margin-bottom: 30px

			@media $xl
				margin: 0
				margin-right 50px

	&__link
		fz-18()
		font-family $Noto
		font-weight 500
		text-decoration: none
		display block
		color: $green
