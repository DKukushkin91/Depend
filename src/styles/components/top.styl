.top
	width 100%
	margin-bottom: 40px

	@media $laptop
		margin-bottom 100px

	&--about,
	&--coupon
		margin-bottom 20px

		@media $laptop
			margin-bottom 40px

	&--partners
		margin-bottom 40px

		@media $laptop
			margin-bottom 60px

	&__container
		padding: 0

	&__slider
		width 100%
		height: 520px
		position relative
		overflow: hidden

		@media $laptop
			height: 440px

		& .top__slider-pagination
			position: absolute
			z-index 1
			bottom: 0
			width: 100%
			text-align: center
			height: 22px

			@media $laptop
				display: none

			& .swiper-pagination-bullet-active
				background-color: $purple

	&__slider-wrap
		width: 100%

		& .swiper-slide
			height: auto

	&__slide
		width: 100%
		display flex
		flex-direction: column
		justify-content: flex-end
		position relative
		padding: 0 15px
		border-bottom-left-radius: 20px
		border-bottom-right-radius: 20px

		@media $laptop
			justify-content: flex-start
			align-items: flex-start
			padding: 0 50px

		&::before
			content: ""
			position absolute
			bottom: 0
			left: 0
			background-image: url("data:image/svg+xml,%3Csvg width='375' height='326' viewBox='0 0 375 326' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath opacity='0.6' d='M-7.0474e-06 80.6129C-7.0474e-06 80.6129 152 103.613 242.797 79.9618C333.593 56.3107 375 3.27835e-05 375 3.27835e-05L375 367.613L-9.92848e-06 367.613L-7.0474e-06 80.6129Z' fill='url(%23paint0_linear_33:581)'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear_33:581' x1='-3.21377e-05' y1='367.613' x2='375' y2='367.613' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='%23258016'/%3E%3Cstop offset='1' stop-color='%23026920'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E%0A")
			background-repeat: no-repeat
			background-size: cover
			width: 100%
			height: 70%
			z-index 1
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

			@media $lg
				height: 80%

			@media $laptop
				height: 337px

		&::after
			content: ''
			position absolute
			top: 0
			left 0
			width: 100%
			height: 100%
			background-color: $black
			opacity: 0.2
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

	&__slide-img
		position: absolute
		width: 100%
		height 100%
		top: 0
		left: 0
		z-index -1
		border-bottom-left-radius: inherit
		border-bottom-right-radius: inherit

		& img
			height: 100%
			object-fit: cover
			object-position: top right
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

	&__slide-content
		padding-bottom: 47px
		text-align: center
		border-bottom-left-radius: inherit
		border-bottom-right-radius: inherit
		position relative
		z-index 1

		@media $laptop
			padding-top 50px
			padding-bottom 50px
			text-align: left
			max-width: 40%

		@media $xl
			max-width: 45%

	&__slide-title
		fz-22()
		line-height 120%
		font-family $Noto
		font-weight bold
		padding-bottom: 12px
		color: $white
		text-align: center

		@media $laptop
			text-align: left

	&__slide-text
		fz-14()
		line-height 140%
		padding-bottom 20px
		text-align: center
		color: $white

		@media $laptop
			text-align: left

	&__slide-link
		fz-14()
		display: inline-block
		vertical-align top
		max-width: 119px
		line-height 120%
		text-decoration: none
		color: $white
		padding: 10px 20px 11px
		background-color: $purple
		border-radius: 20px
		text-align: center

		@media $laptop
			width: 100%
			max-width: 141px

	&__slider-navigation
		display: none

		@media $laptop
			display flex
			flex-direction: row
			flex-wrap: wrap
			width: 90px
			justify-content: space-between
			position: absolute
			bottom: 50px
			right: 100px
			z-index: 99999

	&__slider-prev-btn,
	&__slider-next-btn
		border: 0
		background: 0
		width: 40px
		height: 40px
		background-color: $white
		background-image: url("data:image/svg+xml,%3Csvg width='8' height='15' viewBox='0 0 8 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 14.6668C0.7 14.6668 0.5 14.5668 0.3 14.3668C-0.1 13.9668 -0.1 13.3668 0.3 12.9668L5.6 7.66675L0.3 2.36675C-0.1 1.96675 -0.1 1.36675 0.3 0.966748C0.7 0.566748 1.3 0.566748 1.7 0.966748L7.7 6.96675C8.1 7.36675 8.1 7.96675 7.7 8.36675L1.7 14.3668C1.5 14.5668 1.3 14.6668 1 14.6668Z' fill='%239D2555'/%3E%3C/svg%3E%0A");
		background-position: 50% 50%
		background-size: 8px 15px
		background-repeat: no-repeat
		border-radius: 50%
		cursor pointer

		&:disabled
			opacity 0.5

	&__slider-prev-btn
		transform: rotate(-180deg)

	/// стили на страницы без слайдера ////////////////////////////////////////////////////////////
	&__wrap
		width: 100%
		min-height: 300px
		position relative
		border-bottom-left-radius: 20px
		border-bottom-right-radius: 20px
		display flex
		flex-direction: row
		justify-content: center
		align-items: center
		flex-wrap: wrap

		@media $laptop
			min-height: 320px

		&:before
			content: ""
			position absolute
			bottom: 0
			left: 0
			background-image: url("data:image/svg+xml,%3Csvg width='1280' height='265' viewBox='0 0 1280 265' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath opacity='0.6' d='M-1.48513e-05 169.879C-1.48513e-05 169.879 551.051 249.949 828.746 201.258C1106.44 152.566 1280 0.000111901 1280 0.000111901L1280 339L-2.42161e-05 339L-1.48513e-05 169.879Z' fill='url(%23paint0_linear_127:721)'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear_127:721' x1='-2.96363e-05' y1='339' x2='1280' y2='339' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='%23258016'/%3E%3Cstop offset='1' stop-color='%23026920'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E%0A");
			background-repeat: no-repeat
			background-size: cover
			width: 100%
			height: 50%
			z-index 1
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit
			background-position: right top

			@media $md
				height: 70%
				background-position: right top

			@media $lg
				height: 80%

			@media $xl
				height: 260px

	&__img
		position: absolute
		top: 0
		left 0
		width 100%
		height: 100%
		max-width: 1280px
		border-bottom-left-radius: inherit
		border-bottom-right-radius: inherit

		& img
			height: 100%
			object-fit: cover
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

			@media $md
				object-position: top

	&__title
		fz-22()
		color: $white
		font-family $Noto
		line-height 120%
		font-weight 700
		position relative
		z-index 1
		padding-bottom 60px

	&__text-content
		display: grid
		width 100%
		text-align: center
		position relative
		border-radius: inherit

		&::before
			content: ''
			position relative
			grid-area: 1/-1
			width 100%
			min-height: 375px
			display: flex
			background-image: url("data:image/svg+xml,%3Csvg width='1280' height='393' viewBox='0 0 1280 393' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath opacity='0.7' d='M-1.45984e-05 166.986C-1.45984e-05 166.986 551.051 245.693 828.746 197.831C1106.44 149.969 1280 0.000111901 1280 0.000111901L1280 393L645 393L-1.45984e-05 393L-1.45984e-05 166.986Z' fill='url(%23paint0_linear_79_5400)'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear_79_5400' x1='-3.43572e-05' y1='393' x2='1280' y2='393' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='%23258016'/%3E%3Cstop offset='1' stop-color='%23026920'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E%0A");
			background-position 70% 40%
			background-size: cover
			background-repeat: no-repeat
			border-radius: inherit

			@media $laptop
				min-height: 393px

	&__text-wrap
		grid-area: 1/-1
		padding: 0 15px
		padding-bottom 30px
		display flex
		flex-direction: column
		justify-content: flex-end

		@media $lg
			max-width: 550px
			margin: 0 auto

	&__text
		fz-14()
		line-height 21px
		color $white
		font-weight 400
		font-family $Noto
		position relative
