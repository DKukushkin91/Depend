.coupon
	width 100%

	&__container
		padding 0

	&__top-wrap
		min-height: 410px
		flex-direction: column
		justify-content: flex-end

		@media $lg
			justify-content: space-between

		@media $xl
			min-height: 485px

		&::before
			display: none

		&::after
			content: ''
			width 100%
			height: 99px
			position: absolute
			top 0
			left: 0
			background: linear-gradient(180deg, #000000 0%, rgba(0, 0, 0, 0) 100%);
			opacity: 0.6

	&__top-title
		fz-24()
		line-height 28px
		padding-bottom 15px

	&__top-img
		& img,
		& picture
			border-radius: inherit
			height: 100%
			@media $xl
				object-position: bottom

	&__wrap
		background-color: $buy-gray
		width 100%
		border-radius: 12px
		margin-bottom 20px

		@media $laptop
			max-width: 984px
			margin: 0 auto
			margin-bottom 20px

	&__content
		padding: 15px

		@media $xl
			padding: 40px

		&:not(:last-child)
			padding-bottom: 30px
			border-bottom: 1px solid $border-footer

	&__title
		fz-24()
		line-height 28px
		font-weight 700
		font-family $Noto
		padding-bottom 20px
		text-align center
		color: $l-black

	&__list
		width 100%
		margin 0
		padding 0 15px 30px 15px
		color $m-black
		display flex
		flex-direction: column
		align-items: center

		@media $md
			text-align: center

	&__item
		fz-14()
		line-height 21px
		font-weight 400
		font-family $Noto
		width fit-content
		color: $m-black

		&:not(:last-child)
			padding-bottom 5px

		@media $laptop
			font-size: 16px

	&__inner
		width 100%
		display: flex
		flex-direction: row
		flex-wrap: wrap
		justify-content: center

	&__btn
		display block
		background-color: $purple
		text-align center
		border: 0
		cursor pointer
		padding: 10px 20px 12px 20px
		border-radius: 100px
		margin-bottom 20px
		width 100%

		@media $md
			flex: 1
			margin-bottom 0
			margin-right 20px
			max-width: 226px

	&__btn-text
		font-size: 18px
		line-height 21px
		font-family $Noto
		font-weight 500
		color $white

	&__link
		font-size: 18px
		display block
		line-height 21px
		font-family $Noto
		font-weight 500
		text-align center
		text-decoration: none
		color:  $purple
		background-color: $white
		padding: 10px 20px 12px
		border: 1px solid $purple
		border-radius: 100px
		width 100%

		@media $md
			flex: 1
			max-width: 172px

	&__text
		fz-14()
		line-height 21px
		font-family $Noto
		font-weight 400
		text-align center
		color: $m-black
		padding-bottom 10px

		@media $laptop
			font-size: 16px
			line-height 24px

	&__r-link
		fz-14()
		line-height 21px
		font-family $Noto
		font-weight 400
		color: $purple
		margin-left: 5px

		@media $laptop
			font-size: 16px
			line-height 24px

	&__sub-text
		fz-10()
		line-height 15px
		font-family $Noto
		font-weight 400
		color: $m-black
		text-align: center
