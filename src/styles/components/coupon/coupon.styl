.coupon
	width 100%

	&__container
		padding 0

	&__top-wrap
		min-height: 410px
		flex-direction: column
		justify-content: flex-end

		@media $lg
			justify-content: space-between

		&::before
			display: none

		&::after
			content: ''
			width 100%
			height: 99px
			position: absolute
			top 0
			left: 0
			background: linear-gradient(180deg, #000000 0%, rgba(0, 0, 0, 0) 100%);
			opacity: 0.6

	&__top-title
		fz-24()
		line-height 28px
		padding-bottom 15px

	&__wrap
		background-color: $buy-gray
		width 100%
		border-radius: 12px
		margin-bottom 20px

	&__content
		padding: 15px

		&:not(:last-child)
			padding-bottom: 30px
			border-bottom: 1px solid $border-footer

	&__title
		fz-24()
		line-height 28px
		font-weight 700
		font-family $Noto
		padding-bottom 20px
		text-align center

	&__list
		width 100%
		margin 0
		padding 0 15px 30px 15px
		color $m-black

	&__item
		fz-14()
		line-height 21px
		font-weight 400
		font-family $Noto
		width 100%

		&:not(:last-child)
			padding-bottom 5px

	&__btn
		display block
		background-color: $purple
		text-align center
		border: 0
		cursor pointer
		padding: 10px 20px 12px 20px
		width 100%
		border-radius: 100px
		margin-bottom 20px

	&__btn-text
		fz-18()
		line-height 21px
		font-family $Noto
		font-weight 500
		color $white

	&__link
		fz-18()
		display block
		line-height 21px
		font-family $Noto
		font-weight 500
		text-align center
		text-decoration: none
		width 100%
		color:  $purple
		background-color: $white
		padding: 10px 20px 12px
		border: 1px solid $purple
		border-radius: 100px

	&__text
		fz-14()
		line-height 21px
		font-family $Noto
		font-weight 400
		text-align center
		color: $m-black
		padding-bottom 10px

	&__r-link
		fz-14()
		line-height 21px
		font-family $Noto
		font-weight 400
		color: $purple
		margin-left: 5px

	&__sub-text
		fz-10()
		line-height 15px
		font-family $Noto
		font-weight 400
		color: $m-black
		text-align: center
