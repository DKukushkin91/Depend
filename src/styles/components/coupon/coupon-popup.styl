.coupon-popup
	display flex
	justify-content: center
	align-items: center
	text-align center
	background-color: $white;
	position: fixed;
	z-index 99999999999999
	width: 100%;
	height: 100%;
	top: 0
	right: 0
	bottom: 0
	left 0

	@media $md
		display: block
		background-color: rgba(0,0,0,0.3)

		&:before
			content: ''
			display: inline-block
			vertical-align: middle
			height 100%

	&__form
		background-color: $white
		width 100%
		max-width: 514px
		border-radius: 20px
		padding: 60px 16px

		@media $md
			padding: 40px 60px
			display: inline-block
			vertical-align: middle
			position relative

	&__form-inner
		display: flex
		flex-direction: column

	&__close-btn
		width 16px
		height 16px
		background: 0
		border: 0
		cursor: pointer
		position: absolute
		top 20px
		right 20px

		@media $md
			top: 32px
			right: 32px

	&__icon
		fill: $l-black

	&__title
		font-size: 24px
		line-height 28px
		font-family $Noto
		font-weight 700
		padding-bottom 30px
		width 100%

		@media $md
			font-size: 30px
			line-height 36px
			padding-bottom 40px

	&__title--padding
		padding-bottom 10px

		@media $md
			padding-bottom 15px

	&__label
		width 100%
		display flex
		flex-direction: column

		&:not(:last-child)
			margin-bottom 20px

	&__sub-text
		font-size: 12px
		line-height 18px
		font-family $Noto
		font-weight 400
		color: $m-black
		text-align: left
		opacity 0.5

	&__input
		border 1px solid $m-gray
		border-radius: 12px
		padding: 13px 15px
		font-size: 16px
		line-height 19px
		font-family $Noto
		font-weight 500
		color: $m-black
		margin-bottom 5px

		&:hover
			border-color: $purple

		&:focus
			outline: 1px solid $purple
			border-color: $purple

		&::placeholder
			font-size: 16px
			line-height 19px
			font-family $Noto
			font-weight 500
			color: $m-black
			opacity: 0.3

	&__checkbox-wrap
		padding-bottom 30px
		margin-bottom 30px
		border-bottom: 1px solid $border-footer

	&__checkbox
		position absolute
		z-index -1
		opacity 0

	&__label-check
		font-size: 12px
		line-height 18px
		font-family $Noto
		text-align: left
		color: $m-black
		font-weight 400
		cursor pointer

	&__link
		font-size: 12px
		line-height 18px
		font-family $Noto
		text-align: left
		color: $purple
		font-weight 400

	&__checkbox+.coupon-popup__label-check
		display inline-block
		align-items: center
		user-select: none
		vertical-align: middle

		&::before
			content: ''
			display: inline-block
			vertical-align: middle
			width 25px
			height 25px
			border-radius: 5px
			flex-shrink: 0
			flex-grow: 0
			border 1px solid $m-black
			margin-right 15px
			background-repeat: no-repeat;
			background-position: center center;
			background-size: 50% 50%;
			cursor pointer

	&__checkbox:checked+.coupon-popup__label-check::before
		background-image: url("data:image/svg+xml,%3Csvg width='16' height='11' viewBox='0 0 16 11' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 5L6 10L15 1' stroke='%234D4D4D' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A");

	&__checkbox:not(:disabled):not(:checked)+.coupon-popup__label-check:hover::before
		border-color: $purple

	&__checkbox:focus+.coupon-popup__label-check::before
		border-color: $purple

	&__checkbox:disabled+.coupon-popup__label-check::before
		background-color: $n-gray

	&__btn
		border-radius: 100px
		background-color: $purple
		border: 0
		cursor pointer
		display block
		width fit-content
		padding: 10px 40px 12px
		margin: 0 auto
		opacity: 1

		@media $md
			padding: 16px 40px 17px

		&:disabled
			opacity: 0.5

	&__btn-text
		font-size 18px
		line-height 22px
		font-family $Noto
		font-weight 500
		color $white

	&__icon-wrap
		width 80px
		height 80px
		background: $green
		border-radius: 50%
		margin 0 auto
		margin-bottom: 20px
		display: flex
		align-items: center
		justify-content: center

	&__icon-top
		width 42px
		height 30px
		stroke: $white
		fill: none

	&__text
		font-size 16px
		line-height 22px
		font-family $Noto
		font-weight 400
		color $m-black
		text-align: center
		padding-bottom 97px

	&__redirect-link
		font-size: 18px
		line-height 24px
		border 1px solid $purple
		text-decoration: none
		color: $purple
		padding: 10px 40px 12px
		display block
		max-width: 172px
		margin: 0 auto
		border-radius: 100px

		@media $md
			padding:  16px 40px 17px
