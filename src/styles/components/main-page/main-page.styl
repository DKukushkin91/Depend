.main-page
	width 100%
	margin-bottom: 40px

	&__container
		padding: 0

	&__slider
		width 100%
		position relative
		overflow: hidden

		& .main-page__slider-pagination
			position: absolute
			z-index 1
			bottom: 0
			width: 100%
			text-align: center
			height: 22px

			& .swiper-pagination-bullet-active
				background-color: $purple

	&__slider-wrap
		width: 100%

		& .swiper-slide
			height: auto

	&__slide
		width: 100%
		display flex
		flex-direction: column
		align-items: center
		position relative
		padding: 0 15px
		border-bottom-left-radius: 20px
		border-bottom-right-radius: 20px

		&::before
			content: ""
			position absolute
			bottom: 0
			left: 0
			background-image: url('/f/img/m-slider-line.svg')
			background-repeat: no-repeat
			background-size: cover
			width: 100%
			height: 70%
			z-index 1
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

		&::after
			content: ''
			position absolute
			top: 0
			left 0
			width: 100%
			height: 100%
			background-color: $black
			opacity: 0.2
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

	&__slide-img
		position: absolute
		width: 100%
		height 100%
		top: 0
		left: 0
		z-index -1
		border-bottom-left-radius: inherit
		border-bottom-right-radius: inherit

		& img
			height: 100%
			object-fit: cover
			object-position: top right
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

	&__slide-content
		padding: 75.7% 0 47px
		text-align: center
		border-bottom-left-radius: inherit
		border-bottom-right-radius: inherit
		position relative
		z-index 1

	&__slide-title
		fz-21()
		line-height 120%
		font-family $Noto
		font-weight bold
		padding-bottom: 12px
		color: $white
		text-align: center

	&__slide-text
		fz-14()
		line-height 140%
		padding-bottom 20px
		text-align: center
		color: $white

	&__slide-link
		fz-14()
		line-height 120%
		text-decoration: none
		color: $white
		padding: 10px 20px 11px
		background-color: $purple
		border-radius: 20px
		text-align: center
