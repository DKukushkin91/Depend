.main-page
	width 100%
	margin-bottom: 40px

	@media $laptop
		margin-bottom 100px

	&__container
		padding: 0

	&__slider
		width 100%
		height: 520px
		position relative
		overflow: hidden

		@media $laptop
			height: 440px

		& .main-page__slider-pagination
			position: absolute
			z-index 1
			bottom: 0
			width: 100%
			text-align: center
			height: 22px

			@media $laptop
				display: none

			& .swiper-pagination-bullet-active
				background-color: $purple

	&__slider-wrap
		width: 100%

		& .swiper-slide
			height: auto

	&__slide
		width: 100%
		display flex
		flex-direction: column
		justify-content: flex-end
		position relative
		padding: 0 15px
		border-bottom-left-radius: 20px
		border-bottom-right-radius: 20px

		@media $laptop
			justify-content: flex-start
			align-items: flex-start
			padding: 0 50px

		&::before
			content: ""
			position absolute
			bottom: 0
			left: 0
			background-image: url('/f/img/m-slider-line.svg')
			background-repeat: no-repeat
			background-size: cover
			width: 100%
			height: 70%
			z-index 1
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

			@media $lg
				height: 80%

			@media $laptop
				height: 337px

		&::after
			content: ''
			position absolute
			top: 0
			left 0
			width: 100%
			height: 100%
			background-color: $black
			opacity: 0.2
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

	&__slide-img
		position: absolute
		width: 100%
		height 100%
		top: 0
		left: 0
		z-index -1
		border-bottom-left-radius: inherit
		border-bottom-right-radius: inherit

		& img
			height: 100%
			object-fit: cover
			object-position: top right
			border-bottom-left-radius: inherit
			border-bottom-right-radius: inherit

	&__slide-content
		padding-bottom: 47px
		text-align: center
		border-bottom-left-radius: inherit
		border-bottom-right-radius: inherit
		position relative
		z-index 1

		@media $laptop
			padding-top 50px
			padding-bottom 50px
			text-align: left
			max-width: 40%

		@media $xl
			max-width: 45%

	&__slide-title
		fz-22()
		line-height 120%
		font-family $Noto
		font-weight bold
		padding-bottom: 12px
		color: $white
		text-align: center

		@media $laptop
			text-align: left

	&__slide-text
		fz-14()
		line-height 140%
		padding-bottom 20px
		text-align: center
		color: $white

		@media $laptop
			text-align: left

	&__slide-link
		fz-14()
		display: inline-block
		vertical-align top
		max-width: 119px
		line-height 120%
		text-decoration: none
		color: $white
		padding: 10px 20px 11px
		background-color: $purple
		border-radius: 20px
		text-align: center

		@media $laptop
			width: 100%
			max-width: 141px

	&__slider-navigation
		display: none

		@media $laptop
			display flex
			flex-direction: row
			flex-wrap: wrap
			width: 90px
			justify-content: space-between
			position: absolute
			bottom: 50px
			right: 100px
			z-index: 99999

	&__slider-prev-btn,
	&__slider-next-btn
		border: 0
		background: 0
		width: 40px
		height: 40px
		background-color: $white
		background-image: url("data:image/svg+xml,%3Csvg width='8' height='15' viewBox='0 0 8 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 14.6668C0.7 14.6668 0.5 14.5668 0.3 14.3668C-0.1 13.9668 -0.1 13.3668 0.3 12.9668L5.6 7.66675L0.3 2.36675C-0.1 1.96675 -0.1 1.36675 0.3 0.966748C0.7 0.566748 1.3 0.566748 1.7 0.966748L7.7 6.96675C8.1 7.36675 8.1 7.96675 7.7 8.36675L1.7 14.3668C1.5 14.5668 1.3 14.6668 1 14.6668Z' fill='%239D2555'/%3E%3C/svg%3E%0A");
		background-position: 50% 50%
		background-size: 8px 15px
		background-repeat: no-repeat
		border-radius: 50%
		cursor pointer

		&:disabled
			opacity 0.5

	&__slider-prev-btn
		transform: rotate(-180deg)
