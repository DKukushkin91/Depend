.preview-catalog
	width: 100%
	text-align: center
	padding: 0 25px

	&__wrap
		width: 100%
		display: flex
		flex-direction: column
		align-items: center

	&__img
		max-width: 492px
		margin-bottom 40px

	&__content
		width: 100%
		padding-bottom 40px

	&__title
		fz-18()
		color: $l-black
		line-height 120%
		font-family: $Noto
		font-weight: 400
		padding-bottom: 20px

	&__list
		width: 100%
		display: flex
		flex-direction: column
		align-items: center
		list-style none
		padding 0
		margin 0

	&__item
		max-width: 260px
		&:not(:last-child)
			margin-bottom 10px

	&__link
		fz-14()
		display block
		line-height 120%
		font-family: $Noto
		font-weight 500
		text-decoration: none
		color: $white
		background-color: $purple
		padding: 10px 86px 11px
		border-radius: 20px
