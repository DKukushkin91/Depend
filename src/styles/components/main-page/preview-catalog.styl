.preview-catalog
	width: 100%
	text-align: center
	padding: 0 25px

	@media $laptop
		padding: 0 20px 100px 20px

	@media $xl
		padding: 0 50px 100px 50px

	&__wrap
		width: 100%
		display: flex
		flex-direction: column
		align-items: center

		@media $laptop
			flex-direction: row
			flex-wrap: wrap
			justify-content: space-between

	&__img
		max-width: 492px
		margin-bottom 40px

		@media $laptop
			margin: 0
			margin-right: 40px
			flex: 1

	&__content
		width: 100%
		padding-bottom 40px

		@media $laptop
			width: 40%
			flex: 1.2
			padding: 0

	&__title
		fz-18()
		color: $l-black
		line-height 120%
		font-family: $Noto
		font-weight: 400
		padding-bottom: 20px

	&__list
		width: 100%
		display: flex
		flex-direction: column
		align-items: center
		list-style none
		padding 0
		margin 0

		@media $laptop
			flex-direction: row
			flex-wrap: wrap
			justify-content: space-between
			align-items: flex-start

	&__item
		width: 100%
		text-align: center
		display: flex
		flex-direction: column
		align-items: center

		@media $laptop
			flex: 1

		&:not(:last-child)
			margin-bottom 10px

	&__link
		fz-14()
		display block
		line-height 120%
		font-family: $Noto
		font-weight 500
		text-decoration: none
		color: $white
		background-color: $purple
		width: 88.2%
		padding: 10px 10px 11px
		border-radius: 20px

		@media $md
			max-width: 436px
