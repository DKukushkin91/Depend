.sales
	width 100%
	padding-bottom 40px

	&__container
		position relative

	&__title
		fz-20()
		line-height 24px
		font-family $Noto
		color $l-black
		padding-bottom 20px
		display block
		text-align center
		font-weight 700

		@media $xl
			text-align: left

	&__slider
		width 100%
		position relative

	&__list
		list-style none
		padding 0
		padding-bottom 20px
		margin 0

		@media $xl
			padding-bottom 30px

	&__item
		max-width: 308px
		border-radius 12px
		display flex
		flex-direction: column

		@media $xl
			max-width: 373px
			border-radius: 20px

	&__item.swiper-slide
		height auto

	&__images
		display grid
		border-radius inherit

	&__img
		border-radius inherit
		max-width 308px
		height 206px
		grid-area: 1/-1
		& img
			border-radius inherit
			height 100%
			object-fit cover

		@media $xl
			max-width: 373px
			height 190px

	&__logo
		width 60px
		height 60px
		max-width 60px
		grid-area: 1/-1
		margin: 20px
		border-radius: 12px

		@media $xl
			margin: 20px 30px

		& img
			border-radius inherit

	&__content
		background-color $l-gray
		border-radius inherit
		padding 20px
		flex: 1
		display flex
		flex-direction: column

		@media $xl
			padding 30px

	&__sub-title
		fz-16()
		line-height 19px
		font-family $Noto
		color $l-black
		padding-bottom 10px
		text-align: left
		font-weight 700

		@media $xl
			padding-bottom 20px

	&__text
		fz-12()
		line-height 18px
		color $m-black
		font-weight normal
		font-family $Noto
		text-align: left
		padding-bottom 20px
		flex: 1

		@media $xl
			padding-bottom 30px

	&__link
		fz-14()
		display block
		line-height 16px
		border 1px solid $purple
		border-radius: 20px
		padding: 10px 20px 11px
		text-decoration: none
		color: $purple
		max-width 112px
		font-family $Noto

		@media $xl
			max-width 132px

	&__more-link
		fz-14()
		display block
		line-height 16px
		border 1px solid $purple
		border-radius: 20px
		padding: 10px 20px 11px
		text-decoration: none
		color: $white
		background-color: $purple
		max-width 112px
		font-family $Noto
		text-align: center
		margin: 0 auto

		@media $xl
			max-width 132px
			margin: 0

	&__slider-btn
		display none

		@media (min-width: 1366px)
			display block
			position absolute
			border-radius: 50%
			border 1px solid $purple
			cursor pointer
			width 40px
			height 40px
			background-color $white
			background-repeat: no-repeat

		&.swiper-button-disabled
			opacity: 0.4

