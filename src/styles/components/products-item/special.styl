.special
	width 100%
	margin-bottom 20px

	&__wrap
		width 100%
		display flex
		flex-direction: row
		flex-wrap: wrap
		align-items: center
		justify-content center

	&__img
		flex: 1 1 auto
		border-radius: 20px
		width: 100%
		max-width: 590px

		& img
			height 100%
			object-fit: cover
			border-radius: inherit

	&__content
		flex: 1
		border-radius: 20px
		background-color #FAF8F2
		padding: 40px 29px
		width 100%
		max-width: 590px

	&__title
		fz-24()
		line-height 28px
		text-align: center
		padding-bottom 20px
		color: $l-black
		font-family $Noto

	&__text
		fz-14()
		line-height 19px
		font-weight 400
		font-family $Noto
		text-align: center
		padding-bottom 20px
		color: $m-black

	&__btn
		background-color: $purple
		border-radius: 20px
		padding 10px 20px 11px
		display block
		cursor pointer
		width fit-content
		margin: 0 auto

	&__btn-text
		fz-18()
		line-height 21px
		font-family $Noto
		font-weight 500
		display block
		text-align: center
		color: $white
