.products-item
	width 100%
	background-color: #FAF8F2;
	border-bottom-left-radius: 20px
	border-bottom-right-radius: 20px
	margin-bottom 40px

	&__breadcrumb
		& .breadcrumb__link,
		& .breadcrumb__link-current
			color: #474747

		& .breadcrumb__list
			padding: 20px 0 30px 0

		& .breadcrumb__item
			&::after
				background-image: url("data:image/svg+xml,%3Csvg width='6' height='10' viewBox='0 0 6 10' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cg opacity='0.4' clip-path='url(%23clip0_22_421)'%3E%3Cpath d='M0.75 8.65381L4.91667 5.19227L0.75 1.73073' stroke='%23474747' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/g%3E%3Cdefs%3E%3CclipPath id='clip0_22_421'%3E%3Crect width='6' height='9' fill='white' transform='translate(0 0.5)'/%3E%3C/clipPath%3E%3C/defs%3E%3C/svg%3E");

	&__wrap
		width 100%
		padding 20px 0 40px

		@media $xl
			display grid
			grid-template-columns: repeat(2, 1fr)
			grid-template-rows auto 1fr
			grid-row-gap: 20px

	&__title
		fz-24()
		line-height 28px
		font-weight 700
		color: $green
		text-align: center
		display block
		font-family $Noto
		padding-bottom 20px

		@media $xl
			text-align: left
			padding-bottom 10px

	&__slider-container
		width 100%
		padding-bottom 13px

		@media $xl
			grid-row: 3
			padding-bottom 0

	&__slider
		width 100%

	&__slider-wrapper
		width 100%

		@media $xl
			display flex
			flex-direction: row
			justify-content: center

	&__slide
		max-width: 100%
		display flex
		justify-content: center

		@media $xl
			cursor pointer
			border-radius: 50%
			width 64px
			height 64px
			background-color: $white
			padding 14px
			border: 2px solid transparent

			&:not(:last-child)
				margin-right 20px

			&:hover
				border-color: $purple

		& img
			max-width: 246px

	&__slide--active
		border-color $purple

	&__pagination
		display flex
		flex-direction: row
		justify-content: center
		align-items: center
		padding: 20px 10px

		@media $xl
			display: none

	&__content
		width 100%

		@media $xl
			grid-column: 2
			grid-row 2/4
			display flex
			flex-direction: column

	&__table
		border 1px solid #C1CCDB
		border-radius: 12px
		margin: 0 auto
		padding: 13px 20px 16px
		min-width: 245px
		margin-bottom 30px

		@media $xl
			margin: 0
			margin-bottom 40px
			width 100%

	&__row
		width 100%
		display flex
		justify-content: center
		padding-bottom 10px

		@media $xl
			justify-content: start
			padding-bottom 0

		&:not(:last-child)
			border-bottom: 1px solid #C1CCDB

			@media $xl
				border-bottom 0
				border-right: 1px solid #C1CCDB

	&__row--padding
		padding-bottom 0
		padding-top 15px

		@media $xl
			padding-top 0
			padding-left 15px

	&__cell
		padding 0

		&:not(:last-child)
			border-right: 1px solid #C1CCDB

	&__cell--width
		width 50%

		@media $xl
			margin-right 15px

		&:not(:last-child)
			@media (max-width: 1023.99px)
				margin-right 15px

	&__term
		fz-11()
		line-height 16px
		font-weight 400
		font-family $Noto
		text-align: left
		color $m-black
		display block
		width 100%
		text-transform: uppercase
		padding-bottom 5px

	&__text
		fz-15()
		line-height 22px
		font-weight 700
		font-family $Noto
		text-align: left
		color $m-black

	&__icons
		display flex
		justify-content center

		@media $xl
			justify-content start

	&__icon
		fill: $purple

		&:not(:last-child)
			margin-right 8px

	&__feature
		fz-14()
		line-height 21px
		text-align: center
		font-family $Noto
		color $m-black
		font-weight 400
		padding-bottom 20px

		@media $xl
			text-align left

	&__btn
		display block
		background-color: $purple
		border: 0
		border-radius: 100px
		padding: 10px 40px 12px
		text-align: center
		cursor pointer
		margin: 0 auto

		@media $xl
			padding 16px 40px 17px
			margin: 0
			max-width 145px

	&__btn-text
		fz-18()
		line-height 21px
		color: $white
		text-align: center
		font-weight 500
		font-family $Noto

		@media $xl
			display block
			font-size 18px

	/// js
	&__main-img
		display none

		@media $xl
			display block
			height: 400px
			max-width: 351px
			margin: 0 auto
			grid-column 1
			grid-row 1/-1

	&__tbody
		@media $xl
			display grid
			grid-template-columns: repeat(2, auto)
