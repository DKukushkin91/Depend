.products-item
	width 100%
	background-color: #FAF8F2;
	border-bottom-left-radius: 20px
	border-bottom-right-radius: 20px
	margin-bottom 40px

	&__wrap
		width 100%
		padding 20px 0 40px

	&__title
		fz-24()
		line-height 28px
		font-weight 700
		color: $green
		text-align: center
		display block
		font-family $Noto
		padding-bottom 20px

	&__slider-container
		width 100%
		padding-bottom 13px

	&__slider
		width 100%

	&__slider-wrapper
		width 100%

	&__slide
		max-width: 100%
		display flex
		justify-content: center

		& img
			max-width: 246px

	&__pagination
		display flex
		flex-direction: row
		justify-content: center
		align-items: center
		padding: 20px 10px

	&__content
		width 100%

	&__table
		border 1px solid #C1CCDB
		border-radius: 12px
		margin: 0 auto
		padding: 13px 20px 16px
		min-width: 245px
		margin-bottom 30px

	&__row
		width 100%
		display flex
		justify-content: center
		padding-bottom 10px

		&:not(:last-child)
			border-bottom: 1px solid #C1CCDB

	&__row--padding
		padding-bottom 0
		padding-top 15px

	&__cell
		padding 0

		&:not(:last-child)
			border-right: 1px solid #C1CCDB

	&__cell--width
		width 50%

		&:not(:last-child)
			margin-right 15px

	&__term
		fz-11()
		line-height 16px
		font-weight 400
		font-family $Noto
		text-align: left
		color $m-black
		display block
		width 100%
		text-transform: uppercase
		padding-bottom 5px

	&__text
		fz-15()
		line-height 22px
		font-weight 700
		font-family $Noto
		text-align: left
		color $m-black

	&__icons
		display flex
		justify-content center

	&__icon
		fill: $purple

		&:not(:last-child)
			margin-right 8px

	&__feature
		fz-14()
		line-height 21px
		text-align: center
		font-family $Noto
		color $m-black
		font-weight 400
		padding-bottom 20px

	&__btn
		display block
		background-color: $purple
		border: 0
		border-radius: 100px
		padding: 10px 40px 12px
		text-align: center
		cursor pointer
		margin: 0 auto

	&__btn-text
		fz-18()
		line-height 21px
		color: $white
		text-align: center
		font-weight 500
		font-family $Noto
