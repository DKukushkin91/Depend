.features
	width 100%

	&__wrap
		width 100%

	&__content
		width 100%
		display grid

		@media $lg
			grid-template-columns: repeat(2, 1fr)
			grid-template-rows auto auto 1fr
			grid-column-gap: 10px
			margin-bottom: 30px

	&__title
		fz-20()
		line-height 24px
		text-align: center
		font-family $Noto
		color: $l-black
		font-weight 700
		padding-bottom 20px

		@media $lg
			text-align left
			grid-column 1/-1

	&__text
		fz-14()
		line-height 21px
		text-align: center
		font-family $Noto
		color: $m-black
		font-weight 400
		padding-bottom 40px

		@media $lg
			text-align left

		@media $xl
			font-size 16px
			line-height 24px

	&__list
		list-style: none
		width: fit-content
		max-width 100%
		padding 0
		padding-bottom 40px
		margin 0
		display flex
		flex-direction: column
		margin: 0 auto

		@media $lg
			grid-column 1
			padding-bottom 0

	&__item
		display flex
		flex-wrap: wrap
		align-items: center

		&:not(:last-child)
			padding-bottom 20px

	&__img
		max-width: 50px
		margin-right 20px

		@media $xl
			max-width 80px

	&__text-block
		flex: 1

	&__sub-title
		fz-12()
		line-height 17px
		font-weight 700
		padding-bottom 5px
		color: $charcoal
		text-transform: uppercase
		font-family $Noto

		@media $xl
			font-size 16px
			line-height 23px

	&__item-text
		fz-13()
		line-height 18px
		font-family $Noto
		color $charcoal
		font-weight 400

		@media $xl
			font-size 14px
			line-height 20px

	&__item-img
		max-width: 293px
		grid-row: 3
		justify-self: center
		margin-bottom 53px

		@media $lg
			grid-column 2
			grid-row: 2/-1
			align-self: center
			margin-bottom 0
			max-width: 100%

