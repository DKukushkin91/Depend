.features
	width 100%

	&__wrap
		width 100%

	&__content
		width 100%
		display grid

	&__title
		fz-20()
		line-height 24px
		text-align: center
		font-family $Noto
		color: $l-black
		font-weight 700
		padding-bottom 20px

	&__text
		fz-14()
		line-height 21px
		text-align: center
		font-family $Noto
		color: $m-black
		font-weight 400
		padding-bottom 40px

	&__list
		list-style: none
		width 100%
		padding 0
		padding-bottom 40px
		margin 0

	&__item
		display flex
		flex-wrap: wrap
		align-items: center

		&:not(:last-child)
			padding-bottom 20px

	&__img
		max-width: 50px
		margin-right 20px

	&__text-block
		flex: 1

	&__sub-title
		fz-12()
		line-height 17px
		font-weight 700
		padding-bottom 5px
		color: $charcoal
		text-transform: uppercase
		font-family $Noto

	&__item-text
		fz-13()
		line-height 18px
		font-family $Noto
		color $charcoal
		font-weight 400

	&__item-img
		max-width: 293px
		grid-row: 3
		justify-self: center
		margin-bottom 53px
