.breadcrumb
	display: none

	@media $lg
		display block
		width: 100%
		position relative
		z-index 1
		align-self flex-start

	&__list
		list-style: none
		padding 20px 50px
		margin 0
		display flex
		flex-direction: row

	&__item
		display: block
		position relative

		&:not(:last-child)
			margin-right: 25px

			&::after
				content: ''
				position absolute
				width 6px
				height 9px
				right -(@margin-right / 2 + @width)
				top calc(50% - 4.5px)
				background-image: url("data:image/svg+xml,%3Csvg width='6' height='10' viewBox='0 0 6 10' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cg opacity='0.4' clip-path='url(%23clip0_127:764)'%3E%3Cpath d='M0.75 8.65332L4.91667 5.19178L0.75 1.73024' stroke='white' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/g%3E%3Cdefs%3E%3CclipPath id='clip0_127:764'%3E%3Crect width='6' height='9' fill='white' transform='translate(0 0.5)'/%3E%3C/clipPath%3E%3C/defs%3E%3C/svg%3E%0A");

	&__link,
	&__link-current
		fz-13()
		font-weight normal
		font-family $Noto
		line-height 17px
		color: $white
		text-decoration: none
