.items
	width 100%

	&--bg
		background-color: $l-gray
		padding-top: 30px
		padding-bottom 15px
		margin-bottom 40px

	&__title
		fz-20()
		line-height 24px
		color: $l-black
		font-weight 700
		text-align: center
		font-family $Noto
		padding-bottom 20px

		@media $lg
			text-align: left

		&--border
			border-top: 1px solid #E5E5E5
			padding-top: 30px

	&__slider
		width 100%

	&__slider-list
		list-style: none
		padding 0
		padding-bottom 60px
		margin 0

		&--products-item
			padding-bottom 20px

	&__slider-item
		max-width: 308px
		border: 1px solid $border-footer
		border-radius: 12px
		position relative
		background-color: $white

		@media $laptop
			width 100%
			max-width: 373px

	&__slider-item.swiper-slide
		height auto

	&__link
		position: absolute
		top: 0
		left: 0
		width 100%
		height 100%

	&__img
		width 100%
		border-top-left-radius: inherit
		border-top-right-radius: inherit
		padding-top 16px
		padding-bottom 18px
		display: flex
		align-items: center
		justify-content: center

		& img,
		& picture
			border-top-left-radius: inherit
			border-top-right-radius: inherit
			max-width 183px

	&__item-content
		padding: 0 20px
		padding-bottom 20px

	&__item-subtitle
		fz-16()
		line-height 19px
		color: $burger-green
		font-weight 700
		font-family $Noto
		text-align: left
		padding-bottom 15px

	&__item-text
		fz-12()
		line-height 18px
		font-family $Noto
		font-weight 400
		text-align: left
		color: $m-black

	&__icons
		margin-bottom 20px
		padding: 0 20px

	&__icon
		fill: $border-footer

	// change fill drops
	&__slider-item[data-drops='1'] .items__icon:first-child
		fill: $purple
	&__slider-item[data-drops='2'] .items__icon:nth-child(-n+2)
		fill: $purple
	&__slider-item[data-drops='3'] .items__icon:nth-child(-n+3)
		fill: $purple
	&__slider-item[data-drops='4'] .items__icon:nth-child(-n+4)
		fill: $purple
	&__slider-item[data-drops='5'] .items__icon:nth-child(-n+5)
		fill: $purple
	&__slider-item[data-drops='6'] .items__icon:nth-child(-n+6)
		fill: $purple
	&__slider-item[data-drops='7'] .items__icon
		fill: $purple
	//

	&__more-link
		fz-14()
		line-height 16px
		border-radius: 20px
		background-color: $purple
		padding: 10px 24.5px 11px
		text-decoration: none
		font-family $Noto
		color $white
		font-weight 500
		display block
		text-align: center
		width 220px
		max-width: 260px
		margin 0 auto
		margin-bottom 15px
