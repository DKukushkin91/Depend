.partners
	width 100%

	&__container
		padding: 0

	&__top-wrap
		position relative
		align-items: flex-end

		&::after
			content ''
			left 0
			top 0
			position absolute
			width 100%
			height 100%
			display: block
			background-color: rgba(0,0,0,0.2)
			border-radius: inherit

		&::before
			display: none

	&__top-text-content
		&::before
			min-height 175px
			background-position: 100%

			@media $md
				min-height: 256px
				background-position: 0 0
				border-radius: inherit

			@media $lg
				min-height: 175px
				background-position: 70% 0

			@media $laptop
				min-height 240px

	&__top-img
		border-radius: inherit

		& picture,
		& img
			border-radius inherit
			object-fit: cover
			object-position: 50% 80%
			height 100%

			@media $md
				object-position: 25% 50%

			@media $xl
				object-position: 0 100%

	&__top-text-wrap
		justify-content flex-start

		@media $md
			justify-content: center

	&__top-title
		font-size: 24px

		@media $lg
			font-size: 42px

	&__list
		list-style: none
		padding 0
		margin 0
		display: grid
		grid-template-columns: repeat(auto-fill, minmax(200px, 343px))
		grid-row-gap: 10px
		grid-column-gap: 10px
		justify-content: center
		margin-bottom 20px

		@media $laptop
			grid-template-columns: repeat(auto-fill, minmax(343px, 373px))
			grid-row-gap: 30px
			grid-column-gap: 30px

		@media $xl
			margin-bottom 60px

	&__item
		max-width: 100%
		border-radius: 12px
		display flex
		flex-direction: column

	&__imgs
		display: grid
		border-radius: inherit

	&__img
		grid-area: 1/-1
		border-radius: inherit

		& img
			border-radius: inherit

	&__logo
		grid-area: 1/-1
		display flex
		flex-direction: column
		justify-content: flex-start
		width: 60px
		border-radius: inherit
		margin: 20px

		@media $laptop
			margin: 20px 30px

		& img
			border-radius: inherit

	&__content
		width 100%
		background-color: $l-gray
		border-radius: inherit
		padding: 20px
		display: flex
		flex-direction: column
		flex 1

		@media $laptop
			padding: 30px

	&__item-title
		fz-16()
		line-height 120%
		text-align: left
		padding-bottom: 10px
		font-family $Noto
		font-weight 700
		color $l-black

		@media $xl
			padding-bottom 20px

	&__text
		fz-12()
		line-height 150%
		font-family $Noto
		font-weight 400
		text-align: left
		color: $m-black
		padding-bottom 20px
		flex 1

		@media $xl
			padding-bottom 30px

	&__link
		fz-14()
		font-family $Noto
		line-height 120%
		text-decoration: none
		border 1px solid $purple
		border-radius: 20px
		padding: 10px 20px 11px
		color $purple
		flex 0
		max-width: 112px

		@media $xl
			max-width: 132px

	&__btn
		display block
		background-color: $purple
		padding: 10px 20px 11px
		border 0
		border-radius: 20px
		max-width: 138px
		cursor: pointer
		margin: 0 auto
		margin-bottom 80px

		@media $xl
			max-width: 166px

	&__btn-text
		fz-14()
		line-height 120%
		color $white
		font-family $Noto
		font-weight 500
