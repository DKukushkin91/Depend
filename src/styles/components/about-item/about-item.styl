.about-item
	width 100%

	&__breadcrumb
		& .breadcrumb__list
			padding-left: 0
			padding-right 0

		& .breadcrumb__link,
		& .breadcrumb__link-current
			color: $m-black

		& .breadcrumb__item
			&:not(:last-child)
				&::after
					background-image: url("data:image/svg+xml,%3Csvg width='6' height='10' viewBox='0 0 6 10' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cg opacity='0.4' clip-path='url(%23clip0_126:418)'%3E%3Cpath d='M0.75 8.65332L4.91667 5.19178L0.75 1.73024' stroke='%234D4D4D' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/g%3E%3Cdefs%3E%3CclipPath id='clip0_126:418'%3E%3Crect width='6' height='9' fill='white' transform='translate(0 0.5)'/%3E%3C/clipPath%3E%3C/defs%3E%3C/svg%3E%0A");

	&__wrap
		width 100%

		@media $xxl
			max-width: 1165px

	&__title
		fz-24()
		line-height 28px
		font-family $Noto
		font-weight 700
		padding-bottom 20px
		color $l-black

	&__avatar-wrap
		display flex
		width 100%
		display flex
		flex-direction row
		flex-wrap wrap
		padding-bottom 30px

		@media $lg
			max-width: 787px
			justify-content: space-between
			align-items: center

	&__avatar-box
		width 100%
		padding-bottom 20px
		display flex
		flex-direction: row
		flex-wrap: wrap
		align-items center

		@media $lg
			width 40%
			padding-bottom 0

	&__avatar-img
		border-radius: 50%
		max-width 50px
		margin-right 10px

		@media $lg
			width: 100%
			max-width: 60px

		& img,
		& picture
			border-radius inherit

	&__avatar-content
		display flex
		flex-direction column
		justify-content flex-start

	.about-item__avatar-content--row
		flex-direction row

		&:not(:last-child)
			padding-bottom 10px

	&__avatar-text
		fz-14()
		font-family $Noto
		font-weight 600
		line-height 16px
		color $m-black
		display block

		&:not(:last-child)
			padding-bottom 5px

	&__avatar-text--font
		fz-12()
		line-height 18px
		font-weight normal

	&__avatar-text--fw
		font-weight normal

		&:not(:last-child)
			padding-bottom 0

	&__avatar-text--color
		color: $green
		margin-left 5px

	&__content-wrap
		@media $xxl
			display: grid
			grid-template-columns: 1fr 287px
			column-gap: 90px

	&__title-img
		max-width: 787px
		border-radius: 12px
		margin-bottom 30px

		@media $xxl
			grid-column: 1

		& img,
		& picture
			border-radius: inherit

	&__maintenance
		width 100%
		padding-bottom 30px

		@media $xxl
			position: sticky
			right: 0
			top: 0
			max-width: 295px
			height: min-content
			grid-column: 2
			padding-bottom 40px

	&__list-title
		fz-18()
		line-height 21px
		color $l-black
		font-weight bold
		text-align left
		padding-bottom 15px

	&__list
		padding 0
		margin 0
		list-style-position inside

		@media $xxl
			border 1px solid $border-footer
			border-radius: 12px
			padding: 25px 30px

		&:not(:last-child)
			padding-bottom 30px

	&__item
		width 100%

		&:not(:last-child)
			padding-bottom 10px

		&::marker
			fz-14()
			line-height 21px
			color $purple
			font-weight 600
			font-family $Noto

			@media $xxl
				font-size: 14px
				color $m-black

	&__item--ul
		padding 0
		padding-top 10px

		&:not(:last-child)
			padding-bottom 0

	&__link
		fz-14()
		line-height 21px
		color $purple
		font-weight 600
		text-align: left
		text-decoration: none

		@media $xxl
			font-size: 14px
			color $m-black

	&__ul-list
		padding 0
		padding-left 15px
		margin 0
		list-style-type disc

	&__text
		fz-14()
		line-height 21px
		color $m-black
		font-family $Noto
		font-weight 400
		padding-bottom 30px

		@media $xxl
			grid-column: 1

	&__content-title
		fz-22()
		line-height 26px
		color $l-black
		font-weight bold
		text-align left
		padding-bottom 15px

	&__content-title--fz
		fz-18()
		line-height 21px

	&__blockquote
		position relative
		width 100%
		padding-bottom 40px

		&:before
			content: ''
			display block
			position relative
			background-image: url("data:image/svg+xml,%3Csvg width='19' height='15' viewBox='0 0 19 15' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='4' cy='11' r='4' fill='%23026920'/%3E%3Cpath d='M1 11C1 5.5 2 3 5 1' stroke='%23026920' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3Ccircle cx='15' cy='11' r='4' fill='%23026920'/%3E%3Cpath d='M12 11C12 5.5 13 3 16 1' stroke='%23026920' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A");
			background-position: 0 0
			background-size: 100%
			background-repeat: no-repeat
			width 19px
			height 15px
			margin-bottom 15px

	&__bq-text
		fz-14()
		line-height 21px
		font-family $Noto
		color: $m-black
		font-style italic
		padding-bottom 15px

	&__cite
		display flex
		flex-direction: column
		text-align: left

	&__cite-text
		fz-14()
		line-height 17px
		font-family $Noto
		color: $m-black
		font-weight 600
		font-style normal

		&:not(:last-child)
			padding-bottom 5px

	&__cite-text--font
		fz-12()
		line-height 18px
		font-weight 400

	&__content
		width 100%

		@media $xxl
			grid-column: 1

	&__content-list
		margin 0
		padding 0
		list-style-position inside
		padding-bottom 30px

	&__content-item
		fz-14()
		line-height 21px
		font-weight normal
		color $m-black
		width 100%

		&:not(:last-child)
			padding-bottom 20px

		&::marker
			color: $green

	&__slider
		max-width: 787px

		&.swiper
			padding-bottom 30px
			margin: 0

	&__slder-wrap
		width 100%

	&__slide
		width 100%
		max-width: 345px

		@media $md
			max-width: 787px

		&.swiper-slide
			height auto

	&__slide-img
		height 100%
		border-radius: 12px

		& img,
		& picture
			width 100%
			height 228px
			object-fit: cover
			border-radius: inherit

			@media $md
				height 350px

	&__pagination
		text-align: center

		& .swiper-pagination-bullet-active
			background $purple

	&__navigation
		display: none

	&__ol-list
		list-style: none
		padding 0
		padding-bottom 30px
		margin 0
		counter-reset: olItem

	&__ol-item
		fz-14()
		position relative
		width 100%
		line-height 21px
		color $m-black
		font-family $Noto
		font-weight 400
		display inline-flex

		&:not(:last-child)
			padding-bottom 10px

		&:before
			counter-increment: olItem
			content: counter(olItem)
			fz-14()
			line-height 21px
			font-weight 700
			font-family $Noto
			color $white
			background-color: $green
			border-radius: 50%
			flex: 1 0 27px
			height 27px
			margin-right 10px
			display flex
			align-items center
			justify-content center

	&__table
		width 100%
		border-radius: 12px
		border 1px solid $buy-gray
		margin-bottom 30px
		border-spacing: 0
		border-collapse: separate

	&__thead
		display: none

		@media $md
			display block
			background: $burger-green
			fz-14()
			line-height 21px
			color $white
			font-weight 600
			padding: 10px 20px
			width 100%
			border-top-left-radius: inherit
			border-top-right-radius: inherit

	&__tr-head
		@media $md
			display grid
			grid-template-columns: repeat(auto-fill, 23%)
			width 100%
			align-items: center
			grid-column-gap: 10px

	&__td-head
		width 100%

	&__tbody
		width 100%

		@media $md
			border-bottom-right-radius: inherit
			border-bottom-left-radius: inherit

	&__tr-body
		width 100%

		@media $md
			display grid
			grid-template-columns: repeat(auto-fill, 23%)
			grid-column-gap: 10px
			padding: 10px 20px

			&:last-child
				border-bottom-right-radius: inherit
				border-bottom-left-radius: inherit

		& td:first-child
			background: $burger-green
			fz-14()
			line-height 21px
			color $white
			font-weight 600

			@media $md
				background: 0
				color: $m-black
				font-weight 400

		&:first-child td:first-child
			border-top-left-radius: 12px
			border-top-right-radius: 12px

			@media $md
				border-radius: 0

		&:nth-child(even)
			@media $md
				background-color $buy-gray

	&__td-body
		fz-14()
		line-height 21px
		color: $m-black
		font-weight 400
		display inline-flex
		align-items: center
		width 100%
		position relative
		text-align: right
		justify-content: space-between
		padding: 10px 20px

		@media $md
			text-align: left
			padding: 0

		&:not(:first-child)
			&:before
				content: attr(data-label)
				display inline-block
				text-align: left

				@media $md
					display: none

		&:first-child:before
				@media $md
					content: attr(data-label)
					display block
					text-align: left
					width 100%


		&:nth-child(odd)
			background-color $buy-gray

			@media $md
				background-color transparent

	&__td-text
		@media $md
			display none

	&__ol-links
		fz-12()
		padding 0
		margin 0
		list-style-position: inside
		font-family $Noto
		color $m-black
		padding-bottom 40px

	&__item-link
		&:not(:last-child)
			padding-bottom 15px

	&__ol-link
		fz-12()
		line-height 18px
		font-family $Noto
		color $purple

	&__ol-link--no-link
		fz-12()
		line-height 18px
		text-decoration: none
		color: $m-black
		font-family $Noto
