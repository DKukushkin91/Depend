.other
	width 100%

	&__title
		fz-20()
		line-height 24px
		color: $l-black
		font-family $Noto
		text-align: center
		font-weight bold
		padding-bottom 20px

		@media $lg
			text-align: left

	&__slider
		width 100%

	&__slider-list
		list-style: none
		padding 0
		margin 0
		padding-bottom 80px

	&__slider-item
		max-width: 308px
		border-radius: 12px
		position relative
		display flex
		flex-direction: column

		@media $laptop
			width 100%
			max-width: 373px

	&__slider-item.swiper-slide
		height: auto

	&__link
		position: absolute
		top: 0
		left 0
		width 100%
		height 100%

	&__img
		max-width: 100%
		border-top-left-radius: inherit
		border-top-right-radius: inherit

		& img,
		& picture
			border-top-left-radius: inherit
			border-top-right-radius: inherit

	&__item-content
		background: $l-gray
		padding: 20px
		border-bottom-left-radius: inherit
		border-bottom-right-radius: inherit
		flex: 1 1 auto

	&__item-subtitle
		fz-16()
		line-height 19px
		font-family $Noto
		color: $burger-green
		font-weight 700
		padding-bottom 10px

	&__item-text
		fz-12()
		line-height 18px
		font-family $Noto
		color: $m-black
		font-weight 400
