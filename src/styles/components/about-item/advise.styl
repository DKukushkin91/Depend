.advise
	width 100%

	&__title
		fz-20()
		line-height 24px
		color: $l-black
		font-weight 700
		text-align: center
		font-family $Noto
		padding-bottom 20px

		@media $lg
			text-align: left

	&__slider
		width 100%

	&__slider-list
		list-style: none
		padding 0
		padding-bottom 60px
		margin 0

	&__slider-item
		max-width: 308px
		border: 1px solid $border-footer
		border-radius: 12px
		position relative

		@media $laptop
			width 100%
			max-width: 373px

	&__slider-item.swiper-slide
		height auto

	&__link
		position: absolute
		top: 0
		left: 0
		width 100%
		height 100%

	&__img
		width 100%
		border-top-left-radius: inherit
		border-top-right-radius: inherit
		padding-top 16px
		padding-bottom 18px
		display: flex
		align-items: center
		justify-content: center

		& img,
		& picture
			border-top-left-radius: inherit
			border-top-right-radius: inherit
			max-width 183px

	&__icons
		padding: 0 20px
		padding-bottom 15px

	&__icon
		fill: $border-footer

		&:not(:last-child)
			margin-right 4px

		&:first-child
			fill: $purple

	//////////////////////// for js ///////////////////////////
	&__icon--active
		fill: $purple

	&__item-content
		padding: 0 20px
		padding-bottom 20px

	&__item-subtitle
		fz-16()
		line-height 19px
		color: $burger-green
		font-weight 700
		font-family $Noto
		text-align: left
		padding-bottom 15px

	&__item-text
		fz-12()
		line-height 18px
		font-family $Noto
		font-weight 400
		text-align: left
		color: $m-black
