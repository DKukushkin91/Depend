Options -Indexes 
ErrorDocument 404 /404.php

# added by Jungo
#DirectorySlash Off
#

<IfModule mod_php5.c>
  php_flag session.use_trans_sid off
  #php_value display_errors 1
  #php_value mbstring.internal_encoding UTF-8
</IfModule>

<IfModule mod_rewrite.c>
  Options +FollowSymLinks
  RewriteEngine On
 
  # added by Jungo
  RewriteBase /
  #

  # added by Jungo
  RewriteCond %{REQUEST_URI} ^(.*/[^/\.]+)$
  RewriteRule ^(.*)$ http://%{HTTP_HOST}/$1/ [R=301,L]
  #

  RewriteCond %{HTTP_HOST} ^depend\.ru$ [NC]
  RewriteRule (.*) https://www.depend.ru/$1 [R=301,L]

  Redirect 301 /catalog/vpit-women/ https://www.depend.ru/catalog/vpityvayushchee-bele-dlya-zhenshchin/
  Redirect 301 /catalog/vpit-men/ https://www.depend.ru/catalog/vpityvayushchee-bele-dlya-muzhchin/
  Redirect 301 /catalog/all/ https://www.depend.ru/catalog/
  Redirect 301 /catalog/prokladki/ https://www.depend.ru/catalog/prokladki-dlya-zhenshchin/

  Redirect 301 /advices/good_advices/ https://www.depend.ru/advices/poleznye-sovety/
  Redirect 301 /advices/cure/ https://www.depend.ru/advices/zabota-o-blizkom/

  Redirect 301 /catalog/poslerodovye-prokladki/super/ https://www.depend.ru/catalog/prokladki-dlya-zhenshchin/super/
  Redirect 301 /catalog/poslerodovye-prokladki/depend-ultra-vpit-female-m-l/ https://www.depend.ru/catalog/vpityvayushchee-bele-dlya-zhenshchin/depend-ultra-vpit-female-m-l
  Redirect 301 /catalog/poslerodovye-prokladki/depend-ultra-vpit-female-l-xl/ https://www.depend.ru/catalog/vpityvayushchee-bele-dlya-zhenshchin/depend-ultra-vpit-female-l-xl

  RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.php\ HTTP/
  RewriteRule ^index\.php$ https://www.depend.ru [R=301,L]
 
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !/bitrix/urlrewrite.php$
  RewriteRule ^(.*)$ /bitrix/urlrewrite.php [L]
  RewriteRule .* - [E=REMOTE_USER:%{HTTP:Authorization}]
  # added by Jungo
  RewriteRule ^(.*)/index\.php$ $1 [R=301,L]
  #
</IfModule>

<IfModule mod_dir.c>
  DirectoryIndex index.php index.html
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive on
  ExpiresByType image/jpeg "access plus 3 day"
  ExpiresByType image/gif "access plus 3 day"
  ExpiresByType image/png "access plus 3 day"
  ExpiresByType text/css "access plus 3 day"
  ExpiresByType application/javascript "access plus 3 day"  
</IfModule>
